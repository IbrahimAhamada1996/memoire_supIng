{% extends 'base.html.twig' %}

{% block title %}{% if editMode %}  modifier {% else %}Ajouter {% endif %} un agence | S-Money{% endblock %}

{% form_theme formAgence 'bootstrap_4_layout.html.twig' %}
{% block body %}
  <body id="page-top">

    {{include('_layout/admin/_nav.html.twig')}}
    <div id="wrapper">

      <!-- Sidebar -->
      {{include('_layout/admin/_siderbar.html.twig')}}

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="{{path('admin_home')}}">Accueil</a>
            </li>
            <li class="breadcrumb-item">
              <a href="{{path('agence_list')}}">Agences</a>
            </li>
            <li class="breadcrumb-item active">agence</li>
          </ol>

          <!-- les tarifs -->
            <center><h2>  {% if editMode %}  Modifier {% else %}Ajouter {% endif %} un agence</h2></center>
            <div class="col-12">
              {% for message in app.flashes('succes') %}
              <div class="alert alert-success"> {{message}} </div> 
              {% endfor %}
                  {% for message in app.flashes('danger') %}
              <div class="alert alert-danger"> {{message}} </div> 
              {% endfor %}
           </div>
          {{form_start(formAgence,{'methode':'GET'})}}

            <div class="row">
                <div class="col-6 ">

                    <div class="form-group">
                        {{form_row(formAgence.nomAgence, {'label':'Nom','attr': {'placeholder':"Nom de l'agence "}})}}
                    </div>
                    <div class="form-group">
                        {{form_row(formAgence.adresse, {'label':'Adresse','attr': {'placeholder':"Adresse "}})}}
                    </div>
                    <div class="form-group">
                        {{form_row(formAgence.ville, {'label':'Ville'})}}
                    </div>
                    <div class="form-group">
                     <center>  <button type="submit" class="btn btn-success">valider</button> </center>
                    </div>

                  </div>
                 

          {{form_end(formAgence)}}
         
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
       {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    {{include('_layout/_logout_modal.html.twig')}}

  </body>
{% endblock %}

