{% extends 'base.html.twig' %}

{% block title %} Accueil | S-Money{% endblock %}

{% block body %}

  <body id="page-top">

    {{include('_layout/operateur/_nav.html.twig')}}

    <div id="wrapper">

      <!-- Sidebar -->

      {{include('_layout/operateur/_siderbar.html.twig')}}

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item active">
              <a href="{{path('operateur_home')}}">Accueil</a>
            </li>
            
          </ol>
          {% if null != app.user.compte and null != app.user.agence %}
               <!-- Icon Cards-->
          <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                  <i class="fas fa-comments-dollar"></i>
                  </div>
                  <div class="mr-5">TRANSFERT</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{path('operation_send')}}">
                  <span class="float-left">Formulaire</span>
                  <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                  <i class="fas fa-people-carry"></i>
                  </div>
                  <div class="mr-5">RETRAIT</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{path('operation_reseive')}}">
                  <span class="float-left">Formulaire</span>
                  <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                  </span>
                </a>
              </div>
            </div>
            
          </div>
         {% else %}
           <div class="row">
              <div class="alert alert-danger col-12"><center>
                <h4> Vous n'avez pas d' agence ou de compte chez S-Money.</h4><br>
                 Vous ne pouvez pas effectuer des transactions . <br>
                 Pour plus d'information {% if null != telAdmin %}veuillez nous contacter sur le numéro de téléphone ☎️{{telAdmin}} {% else %} Rendez-vous chez nous {% endif %} <br>
                  MERCI !!!
                  
               <center></div>
           </div>
         {% endif %}
     
         

          

        </div>
        <!-- Sticky Footer -->
        {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{include('_layout/_logout_modal.html.twig')}}

  </body>

{% endblock %}
