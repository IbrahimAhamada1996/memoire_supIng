{% extends 'base.html.twig' %}

{% block title %}Hello OperationController!{% endblock %}

{% block body %}
  <body id="page-top">
    {{include('_layout/operateur/_nav.html.twig')}}
    <div id="wrapper">
      <!-- Sidebar -->
     {{include('_layout/operateur/_siderbar.html.twig')}} 
   
      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">retraits</li>
          </ol>

          <!-- DataTables Example -->
         <center><h2> Liste des retraits </h2></center>
            <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-table"></i>
              Retraits</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <tr>
                      <th>ID</th>
                      <th>Code</th>
                    </tr>
                    </tr> 
                  </thead>
                  <tfoot>
                    <tr>
                      <th>ID</th>
                      <th>Code</th>
                    </tr>
                  </tfoot>
                  <tbody>
                  {% if retraits is empty %}
                  <h2> Aucune Transfert éffectué </h2>
                    {% else %}
                      {% for retrait in retraits %}
                    <tr>
                        <td>{{retrait.id}}</td>
                        <td>{{retrait.codeRetrait}}</td>
                    </tr>
                     {% endfor %}
                  {% endif %}
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer small text-muted">Updated {{'now' | date("m/d/Y  H:m:s")}}</div>
          </div>
         

          <p class="small text-center text-muted my-5">
            <em>More table examples coming soon...</em>
          </p>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
     {{include('_layout/_logout_modal.html.twig')}}


  </body>
{% endblock %}

