{% extends 'base.html.twig' %}

{% block title %}Les tarifs | S-Money!{% endblock %}

{% block body %}
  <body id="page-top">
    {{include('_layout/operateur/_nav.html.twig')}}
    <div id="wrapper">

      <!-- Sidebar -->
      {{include('_layout/operateur/_siderbar.html.twig')}}

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="{{path('operateur_home')}}">Accueil</a>
            </li>
            
            <li class="breadcrumb-item active">tarif</li>
          </ol>
        
          <!-- les tarifs -->
            <center><h2> List des tarifs </h2></center>
              <div class="card mb-3">
                <div class="card-header">
                <i class="fas fa-table"></i>
                 List des tarifs</div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Borne Inférieure</th>
                          <th>Borne Supérieure</th>
                          <th>Valeur</th>
                          <th>Actions</th
                        </tr>
                      </thead>
                      <tfoot>
                      <tr>
                          <tr>
                          <th>ID</th>
                          <th>Borne Inférieure</th>
                          <th>Borne Supérieure</th>
                          <th>Valeur</th>
                          <th>Actions</th>
                        </tr>
                      </tfoot>
                      <tbody>
                        {% for tarif in tarifs %}
                          <tr>
                            <td>#{{tarif.id}}</td>
                            <td>{{tarif.min | format_number}}</td>
                            <td>{{tarif.max | format_number}}</td>
                            <td>{{tarif.tarifClient | format_number}}</td>
                            <td>
                                
                                <a href='{{path('update_ActionTarif',{'id':tarif.id})}}'><button type="button" class="btn btn-primary"><i class="far fa-edit"></i></button><a>
                                <a href='#'><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal"><i class="far fa-trash-alt"></i></button><a>
                                {% include "tarif/delete_modale.html.twig" %}
                            </td>
                            
                        </tr>
                        {% endfor %}
                      
                      
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="card-footer small text-muted">Date et l'heure du jour{{'now' | date("d/m/Y  H:m:s")}}</div>
              </div>
         
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{include('_layout/_logout_modal.html.twig')}}

  </body>

{% endblock %}
