{% extends 'base.html.twig' %}

{% block title %}{% if editMode %}Modifier{% else %}ajouter{% endif %} une ville | S-Money{% endblock %}
{% form_theme formVille 'bootstrap_4_layout.html.twig' %}
{% block body %}
  
  <body id="page-top">

    {{include('_layout/admin/_nav.html.twig')}}
    <div id="wrapper">

      <!-- Sidebar -->
      {{include('_layout/admin/_siderbar.html.twig')}}

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="{{path('admin_home')}}">Accueil</a>
            </li>
            <li class="breadcrumb-item">
              <a href="{{path('ville_list')}}">Villes</a>
            </li>
            <li class="breadcrumb-item active">{% if editMode %}Modifier{% else %}Ajouter{% endif %}</li>
          </ol>

          <!-- les tarifs -->
            <center><h2> {% if editMode %}Modifier{% else %}ajouter{% endif %} une ville </h2></center>
          <div class="col-12">
              {% for message in app.flashes('succes') %}
              <div class="alert alert-success"> {{message}} </div> 
              {% endfor %}
                  {% for message in app.flashes('danger') %}
              <div class="alert alert-danger"> {{message}} </div> 
              {% endfor %}
          </div>
          {{form_start(formVille,{'methode':'GET'})}}

            <div class='container'>
              <div class='col-4'>
                <div class="form-group">
                   {{form_row(formVille.libelle, {'label':'Ville','attr': {'placeholder':"ville"}})}}
                   <button type="submit" class="btn btn-success"> 
                   {% if editMode %}Modifier{% else %}Valider{% endif %}
                   
                   </button>
                </div>
              </div>
            </div>

          {{form_end(formVille)}}
         
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
       {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    {{include('_layout/_logout_modal.html.twig')}}

  </body>
{% endblock %}
