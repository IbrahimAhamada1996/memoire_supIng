{% extends 'base.html.twig' %}

{% block title %}Hello compteController!{% endblock %}

{% block body %}
  <body id="page-top">
       {{include('_layout/admin/_nav.html.twig')}}
    <div id="wrapper">

      <!-- Sidebar -->
      {{include('_layout/admin/_siderbar.html.twig')}}

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin">Dashboard</a>
            </li>
            
            <li class="breadcrumb-item active">utilisateurs</li>
          </ol>
        
          <!-- les tarifs -->
            <center><h2> Liste des comptes des utilisateurs </h2></center>
            <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-table"></i>
              List des utilisateurs</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Photo</th>
                      <th>Name</th>
                      <th>prenom</th>
                      <th>agence</th>
                      <th>Montant actuel</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tfoot>
                  <tr>
                      <tr>
                      <th>ID</th>
                      <th>Photo</th>
                      <th>Name</th>
                      <th>prenom</th>
                      <th>agence</th>
                      <th>Montant actuel</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>
                  <tbody>

                  {% if comptes is empty %}
                      <h4>Aucun utilisateur enregistre </h4>
                    {% else %}

                      {% for compte in comptes %}
                        <tr>
                         <td>#{{compte.id}}</td>
                         <td>
                           {# <img class="card-img-top" src="{{ vich_uploader_asset(compte, 'imageFile')}}" alt="image" style="width:100px"> #}
                          
                           {% if compte.user.image != null %}
                  
                            <img class="card-img-top" src="{{ vich_uploader_asset(compte.user, 'imageFile')}}" alt=" image" style="width:100px">
                            {% else %}
                              {% if compte.user.sex == 'F' %}
                                      <img class="card-img-top" src="{{asset('images/femme.jfif')}}" alt=" image" style="width:100px">
                                      {% else %}
                                        <img class="card-img-top" src="{{asset('images/homme.png')}}" alt=" image" style="width:100px">
                                {% endif %}
                            {% endif %}
                          </td>
                          <td>{{compte.user.nom}}</td>
                          <td>{{compte.user.prenom}}</td>
                          <td>{{compte.user.agence}}</td>
                          <td>{{compte.solde}}</td>
                          <td>
                            <a href='{{path('update_ActionCompte',{'id': compte.id})}}'><button type="button" class="btn btn-info">Virement</button><a>   
                          </td> 
                        </tr>
                      {% endfor %}
                   {% endif %}
                  
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer small text-muted">Updated {{'now' | date("m/d/Y  H:m:s")}}</div>
          </div>
         
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        {{include('_layout/_footer.html.twig')}}

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{include('_layout/_logout_modal.html.twig')}}

  </body>

{% endblock %}

